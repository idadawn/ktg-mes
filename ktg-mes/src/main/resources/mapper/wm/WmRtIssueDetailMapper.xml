    <select id="checkQuantity" parameterType="Long" resultType="String">
        select case when IFNULL(sum(d.quantity),0) > l.quantity_rt then 'G'
                    when IFNULL(sum(d.quantity),0) = l.quantity_rt then 'E'
                    else 'L' end as result
        from wm_rt_issue_line l
                 left join wm_rt_issue_detail d
                           on l.line_id = d.line_id and l.rt_id = d.rt_id
        where l.line_id = #{lineId}
    </select>
        
